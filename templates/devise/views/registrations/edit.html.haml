%legend.center= "Edit #{resource_name.to_s.humanize}"

.col-md-4.col-md-offset-4
  .well
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!

      %fieldset.form-group
        .col-md-12
          = f.label :email
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %div= "Currently waiting confirmation for: #{resource.unconfirmed_email}"

        .col-md-12
          = f.label :password
          %br
          %i (leave blank if you don't want to change it)
          = f.password_field :password, autocomplete: "off", class: "form-control"
          - if @minimum_password_length
            %em= "#{@minimum_password_length} characters minimum"

        .col-md-12
          = f.label :password_confirmation
          = f.password_field :password_confirmation, autocomplete: "off", class: "form-control"

        .col-md-12
          = f.label :current_password
          %br
          %i (we need your current password to confirm your changes)
          = f.password_field :current_password, autocomplete: "off", class: "form-control"

        .col-md-12
          %br
          = f.submit "Update", class: "btn btn-success"
    = link_to "Back", :back

  .row.center
    %hr
    %h4 Cancel my account
    %p
      ¿Unhappy?
      #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "¿Are you sure?" }, method: :delete, class: "btn btn-sm btn-danger" }
